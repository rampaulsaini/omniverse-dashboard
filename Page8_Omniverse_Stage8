Page8_Omniverse/
├─ index.html               ← Page 8 HTML (canvas + start button)
├─ scripts/
│   └─ stage8.js            ← Same Stage-8 script used in Page 9
└─ assets/
    ├─ userFaceModel.glb    ← 3D face model
    └─ userFaceTexture.png  ← Face texture
<!DOCTYPE html>
<html lang="hi">
<head>
    <meta charset="UTF-8">
    <title>Supreme Omniverse Stage-8 - Page 8</title>
    <style>
        html, body { margin:0; padding:0; overflow:hidden; height:100%; background:#000; }
        canvas { display:block; }
        #startBtn { position:fixed; left:50%; top:50%; transform:translate(-50%, -50%);
                    z-index:9999; padding:1rem 2rem; font-size:1.5rem; cursor:pointer; }
    </style>
</head>
<body>
    <canvas id="omniverseCanvas"></canvas>
    <button id="startBtn">Supreme Omniverse शुरू करें</button>

    <script type="module" src="./scripts/stage8.js"></script>

    <script type="module">
        import { initSupremeOmniverse } from './scripts/stage8.js';

        const startBtn = document.getElementById('startBtn');
        let omniverseStarted = false;

        startBtn.addEventListener('click', async () => {
            if (window.audioContext) await window.audioContext.resume();
            if (!omniverseStarted) {
                initSupremeOmniverse(
                    'omniverseCanvas',
                    './assets/userFaceModel.glb',
                    './assets/userFaceTexture.png'
                );
                omniverseStarted = true;
            }
            startBtn.style.display = 'none';
        });
    </script>
</body>
</html>
