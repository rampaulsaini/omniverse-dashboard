// scripts/tools.js
// List of AI Tools (Client-side JS)
// Uses free AI endpoints (mock / replace with OpenAI / HuggingFace)

window.OmniTools = {
  tools: [
    {
      id:'resume',name:'Resume Generator',description:'Generate professional resumes',
      run: async function(input){ 
        return `--- Resume ---\nName: ${input.name||'John Doe'}\nTitle: ${input.title||'Software Engineer'}\nSkills: ${input.skills||'JavaScript, Python'}\nSummary: AI generated resume content.`; 
      }
    },
    {
      id:'bio',name:'Bio Generator',description:'Generate short bio / About me',
      run: async function(input){ 
        return `Hello, I am ${input.name||'John Doe'}, passionate about ${input.field||'AI and Technology'}. AI generated bio.`; 
      }
    },
    {
      id:'script',name:'Script Writer',description:'Generate JS / Python scripts',
      run: async function(input){ 
        return `// AI Script Generator\n// Task: ${input.task||'Example Task'}\nconsole.log("Generated by Omniverse AI");`;
      }
    },
    {
      id:'notes',name:'Notes Generator',description:'Generate meeting/study notes',
      run: async function(input){
        return `--- Notes ---\nTopic: ${input.topic||'Sample Topic'}\nNotes:\n1. AI generates content\n2. User reviews\n3. Done`;
      }
    },
    {
      id:'idea',name:'Business Idea Generator',description:'Generate startup/business ideas',
      run: async function(input){
        return `Business Idea: ${input.field||'AI Automation'}\nDescription: AI generates a unique concept for ${input.field||'your niche'} market.`;
      }
    }
  ]
};

